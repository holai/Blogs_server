<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--时间轴 -->
    <servlet>
        <servlet-name>intro</servlet-name>
        <servlet-class>httpa.Intro</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>intro</servlet-name>
        <url-pattern>/intro</url-pattern>
    </servlet-mapping>

    <!--删除时间轴-->
    <servlet>
        <servlet-name>removeIntro</servlet-name>
        <servlet-class>httpa.RemoveIntro</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>removeIntro</servlet-name>
        <url-pattern>/admin/removeIntro</url-pattern>
    </servlet-mapping>

    <!--添加-->
    <servlet>
        <servlet-name>addIntro</servlet-name>
        <servlet-class>httpa.AddIntro</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addIntro</servlet-name>
        <url-pattern>/admin/addIntro</url-pattern>
    </servlet-mapping>


    <!--后台登陆-->
    <servlet>
        <servlet-name>admin</servlet-name>
        <servlet-class>httpa.admin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>admin</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!--图片上传 ImageFile -->
    <servlet>
        <display-name>imageFile</display-name>
        <servlet-name>imageFile</servlet-name>
        <servlet-class>httpa.ImageFile</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>imageFile</servlet-name>
        <url-pattern>/admin/imageFile</url-pattern>
    </servlet-mapping>

    <!--添加文章 Add -->
    <servlet>
        <servlet-name>addArticles</servlet-name>
        <servlet-class>httpa.AddArticles</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addArticles</servlet-name>
        <url-pattern>/admin/addArticles</url-pattern>
    </servlet-mapping>


    <!--读取文章列表  -->
    <servlet>
        <servlet-name>articles</servlet-name>
        <servlet-class>httpa.Articles</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>articles</servlet-name>
        <url-pattern>/articles</url-pattern>
    </servlet-mapping>

    <!--读取 标签 列表  -->
    <servlet>
        <servlet-name>labels</servlet-name>
        <servlet-class>httpa.Labels</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>labels</servlet-name>
        <url-pattern>/labels</url-pattern>
    </servlet-mapping>

    <!--添加 标签 -->
    <servlet>
        <servlet-name>addLabels</servlet-name>
        <servlet-class>httpa.AddLabels</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addLabels</servlet-name>
        <url-pattern>/admin/addLabels</url-pattern>
    </servlet-mapping>

    <!--删除 标签 -->
    <servlet>
        <servlet-name>removeLabels</servlet-name>
        <servlet-class>httpa.RemoveLabels</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>removeLabels</servlet-name>
        <url-pattern>/admin/removeLabels</url-pattern>
    </servlet-mapping>


    <!--读取文章 -->
    <servlet>
        <servlet-name>article</servlet-name>
        <servlet-class>httpa.Article</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>article</servlet-name>
        <url-pattern>/article</url-pattern>
    </servlet-mapping>

    <!--删除 文章 -->
    <servlet>
        <servlet-name>removeArticles</servlet-name>
        <servlet-class>httpa.RemoveArticles</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>removeArticles</servlet-name>
        <url-pattern>/admin/removeArticles</url-pattern>
    </servlet-mapping>

    <!--修改 文章 -->
    <servlet>
        <servlet-name>alterArticles</servlet-name>
        <servlet-class>httpa.AlterArticles</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>alterArticles</servlet-name>
        <url-pattern>/admin/alterArticles</url-pattern>
    </servlet-mapping>

    <!-- 浏览量 -->
    <servlet>
        <servlet-name>pageView</servlet-name>
        <servlet-class>httpa.PageView</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>pageView</servlet-name>
        <url-pattern>/pageView</url-pattern>
    </servlet-mapping>




</web-app>